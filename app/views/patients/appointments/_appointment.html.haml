%tr
  %td= appointment.id
  %td= appointment.date
  %td
    - unless appointment.patient.present?
      = link_to "book", book_patients_appointment_path(appointment), method: 'patch', class: 'btn btn-success btn-sm'
    - else
      = link_to "cancel", cancel_patients_appointment_path(appointment), method: 'patch', class: 'btn btn-warning btn-sm'