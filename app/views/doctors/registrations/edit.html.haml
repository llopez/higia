.row.mb-4
  .col-md-12
    .card
      .card-header
        Info
      .card-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          - if resource.errors.any?
            .form-group
              .card
                .card-header.bg-danger.text-white
                  = resource.errors.count
                  errros prohibited this user from being saved
                .card-body
                  %ul.list-group.list-group-flush
                    - resource.errors.each do |field, error|
                      %li.list-group-item
                        = "#{field} #{error}"
          .form-group
            = f.label :email, class: 'label'
            = f.email_field :email, autofocus: true, class: 'form-control'
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .form-group
            = f.label :license_number, class: 'label'
            = f.text_field :license_number, autofocus: true, class: 'form-control', placeholder: 'License Number'
          .form-group
            = f.label :password, class: 'label'
            %i (leave blank if you don't want to change it)
            = f.password_field :password, autocomplete: "off", class: 'form-control'
          .form-group
            = f.label :password_confirmation, class: 'label'
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
          .form-group
            = f.label :current_password, class: 'label'
            %i (we need your current password to confirm your changes)
            = f.password_field :current_password, autocomplete: "off", class: 'form-control'
          .form-group
            = f.submit "Update", class: 'btn btn-primary'
.row
  .col-md-12
    .card
      .card-header
        Cancel my account
      .card-body
        %p
          Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
