<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signup' }) do |f| %>
  <legend>Forgot your password?</legend>
  <%- if resource.errors.any? %>
    <div class="form-group">
    <div class="card">
      <div class="card-header bg-danger text-white">
        <%= resource.errors.count %> errros prohibited this form from being sent
      </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <%- resource.errors.each do |field, error| %>
              <li class="list-group-item"><%= field %> <%= error%></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Reset Password", class: 'btn btn-primary' %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
