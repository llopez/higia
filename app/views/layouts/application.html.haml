!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "favicon.ico", :rel => "icon"}/
    %title Higia
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-md.mb-4(style="background-color: #cce6ff")
      %a.navbar-brand
        Higia
      .collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          %li.nav-item.dropdown
            %a.nav-link.dropdown-toggle(data-toggle="dropdown")
              = current_user.email
            .dropdown-menu
              = link_to "Profile", edit_patient_registration_path, class: 'dropdown-item'
              = link_to "Sign Out", destroy_user_session_path, method: 'delete', class: 'dropdown-item'
    .container
      - flash.each do |k, v|
        %div{:class => "alert flash-#{k}", :role => "alert"}
          = v
      = yield